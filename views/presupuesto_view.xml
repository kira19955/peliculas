<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="presupuesto_form_view" model="ir.ui.view">
            <field name="name">presupuesto_view</field>
            <field name="model">presupuesto</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <widget name="web_ribbon" title="archivado" bg_color="bg-danger" attrs="{'invisible':[('active','=',True)]}"/>
                        <field name="image_1920" widget="image" class="oe_avatar" options="{'preview_image': 'image_128',
                         'size':['',128]}"/>

                        <div class="oe_title">
                            <div class="o_row">
                                <h1><field name="name" placeholder="Nombre de la pelicula....." required="1" default_focus="1"/></h1>
                                <field name="puntuacion" widget="percentpie" string=" " style="padding-left: 10px;"/>
                            </div>
                        </div>
                    <group>
                        <group>
                            <field name="clasificacion"/>
                        </group>
                        <group>
                            <field name="active" invisible="1"/>
                        </group>
                    </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>